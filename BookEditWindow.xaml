<Window x:Class="LibraryManagement.BookEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавить книгу" Height="360" Width="400" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="16">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Сохранить" Padding="16,6" Margin="0,0,8,0" IsDefault="True" Click="Save_Click"/>
            <Button Content="Отмена" Padding="16,6" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="Название:" Margin="0,0,0,4"/>
                <TextBox x:Name="TitleBox" Margin="0,0,0,12" Padding="4"/>
                <TextBlock Text="Автор:" Margin="0,0,0,4"/>
                <ComboBox x:Name="AuthorCombo" Margin="0,0,0,12" Padding="4" DisplayMemberPath="FullName"/>
                <TextBlock Text="Жанр:" Margin="0,0,0,4"/>
                <ComboBox x:Name="GenreCombo" Margin="0,0,0,12" Padding="4" DisplayMemberPath="Name"/>
                <TextBlock Text="Год издания:" Margin="0,0,0,4"/>
                <TextBox x:Name="YearBox" Margin="0,0,0,12" Padding="4"/>
                <TextBlock Text="Количество в наличии:" Margin="0,0,0,4"/>
                <TextBox x:Name="QuantityBox" Margin="0,0,0,12" Padding="4"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
