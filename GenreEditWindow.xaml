<Window x:Class="LibraryManagement.GenreEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавить жанр" Height="260" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Название:" Margin="0,0,0,4"/>
        <TextBox x:Name="NameBox" Grid.Row="1" Margin="0,0,0,12" Padding="4"/>
        <TextBlock Grid.Row="2" Text="Описание:" Margin="0,0,0,4"/>
        <TextBox x:Name="DescriptionBox" Grid.Row="3" Margin="0,0,0,12" Padding="4" TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60"/>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Сохранить" Padding="16,6" Margin="0,0,8,0" IsDefault="True" Click="Save_Click"/>
            <Button Content="Отмена" Padding="16,6" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
