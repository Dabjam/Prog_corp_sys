<Window x:Class="LibraryManagement.AuthorEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавить автора" Height="320" Width="360" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <DockPanel Margin="16">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Сохранить" Padding="16,6" Margin="0,0,8,0" IsDefault="True" Click="Save_Click"/>
            <Button Content="Отмена" Padding="16,6" IsCancel="True" Click="Cancel_Click"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="Имя:" Margin="0,0,0,4"/>
                <TextBox x:Name="FirstNameBox" Margin="0,0,0,12" Padding="4"/>
                <TextBlock Text="Фамилия:" Margin="0,0,0,4"/>
                <TextBox x:Name="LastNameBox" Margin="0,0,0,12" Padding="4"/>
                <TextBlock Text="Дата рождения (дд.мм.гггг):" Margin="0,0,0,4"/>
                <TextBox x:Name="BirthDateBox" Margin="0,0,0,12" Padding="4"/>
                <TextBlock Text="Страна:" Margin="0,0,0,4"/>
                <TextBox x:Name="CountryBox" Margin="0,0,0,12" Padding="4"/>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
