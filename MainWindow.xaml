<Window x:Class="LibraryManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagement"
        mc:Ignorable="d"
        Title="Управление библиотекой книг" Height="550" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Поиск по названию:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="SearchBox" Width="200" Padding="4,2" VerticalAlignment="Center"
                     KeyUp="SearchBox_KeyUp"/>
        </StackPanel>
        <Border Grid.Row="1" BorderBrush="#CCC" BorderThickness="1" Padding="8" Margin="0,0,0,8" Background="#F5F5F5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Жанр:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="GenreFilter" Width="180" Padding="4,2" SelectionChanged="Filter_Changed"
                          DisplayMemberPath="Name"/>
                <TextBlock Text="Автор:" VerticalAlignment="Center" Margin="16,0,8,0"/>
                <ComboBox x:Name="AuthorFilter" Width="220" Padding="4,2" SelectionChanged="Filter_Changed"
                          DisplayMemberPath="FullName"/>
                <Button Content="Сбросить фильтры" Margin="16,0,0,0" Padding="8,4" Click="ResetFilters_Click"/>
            </StackPanel>
        </Border>
        <DataGrid x:Name="BooksGrid" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionChanged="BooksGrid_SelectionChanged"
                  CanUserAddRows="False" CanUserDeleteRows="False" Margin="0,0,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*" MinWidth="150"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Author.FullName}" Width="150"/>
                <DataGridTextColumn Header="Год" Binding="{Binding PublishYear}" Width="60"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genre.Name}" Width="120"/>
                <DataGridTextColumn Header="В наличии" Binding="{Binding QuantityInStock}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="AddBookButton" Content="Добавить книгу" Padding="12,6" Margin="0,0,8,0" Click="AddBook_Click"/>
            <Button x:Name="EditBookButton" Content="Редактировать" Padding="12,6" Margin="0,0,8,0" IsEnabled="False" Click="EditBook_Click"/>
            <Button x:Name="DeleteBookButton" Content="Удалить книгу" Padding="12,6" Margin="0,0,8,0" IsEnabled="False" Click="DeleteBook_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Авторы" Padding="12,6" Margin="0,0,8,0" Click="ManageAuthors_Click"/>
            <Button Content="Жанры" Padding="12,6" Click="ManageGenres_Click"/>
        </StackPanel>
    </Grid>
</Window>
