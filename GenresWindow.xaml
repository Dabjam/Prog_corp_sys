<Window x:Class="LibraryManagement.GenresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Управление жанрами" Height="400" Width="550" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="GenresGrid" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" CanUserAddRows="False" CanUserDeleteRows="False" Margin="0,0,0,8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Добавить" Padding="12,6" Margin="0,0,8,0" Click="Add_Click"/>
            <Button Content="Редактировать" x:Name="EditButton" Padding="12,6" Margin="0,0,8,0" IsEnabled="False" Click="Edit_Click"/>
            <Button Content="Удалить" x:Name="DeleteButton" Padding="12,6" IsEnabled="False" Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</Window>
